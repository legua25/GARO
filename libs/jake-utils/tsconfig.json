{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "dist",
        "declaration": true,
        "lib": [ "esnext" ],

        "allowJs": true,
        "alwaysStrict": true,
        "allowUnreachableCode": false,
        "allowUmdGlobalAccess": true,
        "jsx": "react",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedParameters": true,
        "removeComments": true,
        "resolveJsonModule": true,
        "strictNullChecks": true
    },
    "include": [ "src/**/*" ]
}
